</main>

<script>
  feather.replace();

  const sidebar = document.getElementById('sidebar');
  const toggleBtn = document.getElementById('toggleSidebar');
  const sidebarTitle = document.getElementById('sidebarTitle');
  const main = document.querySelector('main');

  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('w-64');
    sidebar.classList.toggle('w-20');

    document.querySelectorAll('.sidebarText').forEach(el => {
      el.classList.toggle('hidden');
    });

    sidebarTitle.classList.toggle('hidden');

    const icon = toggleBtn.querySelector('i');
    icon.dataset.feather = sidebar.classList.contains('w-64') ? 'chevron-left' : 'chevron-right';
    feather.replace();

    // Ajusta a margem do main conforme a largura da sidebar
    if(sidebar.classList.contains('w-64')){
      main.classList.replace('ml-20', 'ml-64');
    } else {
      main.classList.replace('ml-64', 'ml-20');
    }
  });
</script>
